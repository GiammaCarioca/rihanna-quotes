{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,                                  
    "strict": true,                                      
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,                           
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                                  
    "esModuleInterop": true,                            
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
